{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "moduleResolution": "node",
        "paths": {
            "src/*": ["./src/*"],
            "appConfig": ["./config/index.js"]
        },
        "allowSyntheticDefaultImports": true,
        "emitBOM": true,
        "charset": "utf8"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}

